<UserControl 
    x:Name="SettingViewContent"
    x:Class="GFAlarm.View.Option.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:ls="clr-namespace:LocalizationResources;assembly=LocalizationResources"
    xmlns:uc="http://www.quickzip.org/BaseControls"
    xmlns:local="clr-namespace:GFAlarm.View.Option"
    mc:Ignorable="d" 
    
    SnapsToDevicePixels="True"
    d:DesignHeight="2500" 
    d:DesignWidth="225">
    <UserControl.Resources>
        <!-- GroupBox.Border (height 40px) -->
        <Style BasedOn="{StaticResource GroupBox.Border}"
               TargetType="{x:Type Border}" x:Key="GroupBox.Border">
            <Setter Property="Height" Value="40"/>
        </Style>
        <!-- GroupBox.Title.TextBlock (verticalalign center) -->
        <Style BasedOn="{StaticResource GroupBox.Title.TextBlock}"
               TargetType="{x:Type TextBlock}" x:Key="GroupBox.Title.TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!-- GroupBox.Arrow.Icon (margin 0,5,0,0) -->
        <Style BasedOn="{StaticResource GroupBox.Arrow.Icon}"
               TargetType="{x:Type iconPacks:PackIconMaterial}" x:Key="GroupBox.Arrow.Icon">
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="0,0,2,0">
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <StackPanel Orientation="Vertical">
                <!-- [그룹] 언어 -->
                <Border
                    x:Name="LanguageGroupBox"
                    Style="{StaticResource GroupBox.Border}"
                    MouseLeftButtonDown="GroupBox_MouseLeftButtonDown">
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/> <!-- icon -->
                            <ColumnDefinition Width="*"/> <!-- title -->
                            <ColumnDefinition Width="Auto"/> <!-- arrow -->
                        </Grid.ColumnDefinitions>
                        <!-- icon -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="0"
                            Style="{StaticResource GroupBox.Icon}"
                            Width="16" Height="13" Kind="Translate"/>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource GroupBox.Title.TextBlock}"
                            Text="{Binding Path=[SETTING_LANGUAGE_GROUP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- arrow -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="2"
                            x:Name="LanguageGroupBox_Arrow"
                            Style="{StaticResource GroupBox.Arrow.Icon}"
                            Kind="ChevronDown"/>
                    </Grid>
                </Border>
                <!-- [목록] 언어 -->
                <StackPanel
                    x:Name="LanguageListBox"
                    Orientation="Vertical">
                    <!-- 언어 설정 -->
                    <Grid Margin="20,10,20,15" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Content.Title.Big.TextBlock}"
                            Text="Language"/>
                        <!-- combobox -->
                        <ComboBox
                            Grid.Row="1"
                            x:Name="LanguageComboBox"
                            Style="{StaticResource Content.ComboBox}"
                            SelectionChanged="LanguageComboBox_SelectionChanged">
                            <ComboBoxItem Content="Korean"/>
                            <ComboBoxItem Content="Chinese"/>
                            <ComboBoxItem Content="English"/>
                            <ComboBoxItem Content="Japanese"/>
                        </ComboBox>
                        <!-- comment -->
                        <TextBlock
                            Grid.Row="2"
                            x:Name="LanguageWarningTextBlock" Visibility="Collapsed"
                            Style="{StaticResource Base.TextBlock}"
                            Margin="0,5,0,0" Foreground="{StaticResource RedBrush}"
                            Text="Restart Required"/>
                    </Grid>
                </StackPanel>
                <!-- [그룹] 윈도우 알림 -->
                <Border
                    x:Name="WindowToastGroupBox"
                    Style="{StaticResource GroupBox.Border}"
                    MouseLeftButtonDown="GroupBox_MouseLeftButtonDown">
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <!-- icon -->
                            <ColumnDefinition Width="*"/>
                            <!-- title -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- arrow -->
                        </Grid.ColumnDefinitions>
                        <!-- icon -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="0"
                            Style="{StaticResource GroupBox.Icon}"
                            Width="16" Height="13" Kind="Comment"/>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource GroupBox.Title.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_GROUP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- indicator -->
                        <TextBlock
                            Grid.Column="2"
                            x:Name="WindowToastGroupBox_OnOff"
                            Style="{StaticResource Base.TextBlock}"
                            Margin="0,0,28,0" VerticalAlignment="Center" Foreground="{StaticResource RedBrush}"
                            Text="OFF"/>
                        <!-- arrow -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="2"
                            x:Name="WindowToastGroupBox_Arrow"
                            Style="{StaticResource GroupBox.Arrow.Icon}"
                            Kind="ChevronDown"/>
                    </Grid>
                </Border>
                <!-- [목록] 윈도우 알림 -->
                <StackPanel 
                    x:Name="WindowToastListBox"
                    Orientation="Vertical">
                    <!-- 윈도우 알림 -->
                    <Grid Margin="20,10,20,5" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Content.Title.Big.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_USE_WIN_TOAST], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Column="1"
                            x:Name="WindowToastCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="WindowToastCheckBox_Checked" Unchecked="WindowToastCheckBox_Unchecked"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <Image HorizontalAlignment="Stretch" Stretch="UniformToFill" StretchDirection="DownOnly" RenderOptions.BitmapScalingMode="HighQuality"
                                       Source="/GFAlarm;component/Resource/image/guide/win_noti_toast.png"/>
                                <Image Margin="0,5,0,0" HorizontalAlignment="Stretch" Stretch="UniformToFill" StretchDirection="DownOnly" RenderOptions.BitmapScalingMode="HighQuality"
                                       Source="/GFAlarm;component/Resource/image/guide/win_noti_traytip.png"/>
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Margin="0,5,0,0" 
                                                  Html="{Binding Path=[SETTING_TOAST_USE_WIN_TOAST_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- border -->
                    <Border Margin="10,5,10,0" Style="{StaticResource Content.Border}"/>
                    <!-- 강한 알림 -->
                    <Grid Margin="20,10,20,5" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- title -->
                        <uc:HtmlTextBlock
                            Grid.Column="0"
                            Style="{StaticResource Content.Title.Big.TextBlock}"
                            Html="{Binding Path=[SETTING_TOAST_USE_STRONG_WIN_TOAST], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Column="1"
                            x:Name="StrongToastCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="StrongToastCheckBox_Checked" Unchecked="StrongToastCheckBox_Unchecked"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_TOAST_USE_STRONG_WIN_TOAST_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- border -->
                    <Border Margin="10,5,10,0" Style="{StaticResource Content.Border}"/>
                    <!-- 음성 알림 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <uc:HtmlTextBlock
                            Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource Content.Title.Big.TextBlock}"
                            Html="{Binding Path=[SETTING_TOAST_USE_VOICE], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Row="0" Grid.Column="1"
                            x:Name="VoiceCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="VoiceCheckBox_Checked" Unchecked="VoiceCheckBox_Unchecked"/>
                        <!-- comment -->
                        <uc:HtmlTextBlock
                            Grid.Row="1" Grid.ColumnSpan="2"
                            x:Name="VoiceCommentTextBlock"
                            Style="{StaticResource Base.TextBlock}"
                            Margin="0,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                            FontSize="11" Foreground="#666666" TextWrapping="Wrap"
                            Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_TOAST_USE_VOICE_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- 부관 음성만 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_USE_ONLY_ADJUTANT_VOICE], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Column="1"
                            x:Name="AdjutantVoiceCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="AdjutantVoiceCheckBox_Checked" Unchecked="AdjutantVoiceCheckBox_Unchecked"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_TOAST_USE_ONLY_ADJUTANT_VOICE_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- 군수/자율 출발 음성 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_USE_START_VOICE], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Column="1"
                            x:Name="StartVoiceCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="StartVoiceCheckBox_Checked" Unchecked="StartVoiceCheckBox_Unchecked"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_TOAST_USE_START_VOICE_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- 음성 알림 볼륨 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_VOICE_VOLUME], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- slider -->
                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                x:Name="VolumeSlider"
                                MinHeight="8" Height="8" VerticalAlignment="Center"
                                TickFrequency="1" IsSnapToTickEnabled="True" IsMoveToPointEnabled="True"/>
                            <!-- counter -->
                            <TextBox
                                Grid.Column="1"
                                x:Name="VolumeTextBox"
                                Style="{StaticResource Content.Slider.TextBox}"
                                LostFocus="VolumeTextBox_LostFocus"/>
                        </Grid>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_TOAST_VOICE_VOLUME_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- 구버전 소리 API -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_USE_SOUNDPLAYER_API], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Column="1"
                            x:Name="SoundPlayerApiCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="SoundPlayerApiCheckBox_Checked" Unchecked="SoundPlayerApiCheckBox_Unchecked"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_TOAST_USE_SOUNDPLAYER_API_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- 테스트 알림 -->
                    <Button
                        x:Name="ToastTestButton"
                        Style="{StaticResource Base.Button}"
                        Width="90" Margin="0,10,20,5" Padding="5,4" HorizontalAlignment="Right" VerticalAlignment="Center"
                        FontSize="11"
                        Content="{Binding Path=[SETTING_TOAST_TEST_BUTTON], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"
                        Click="ToastTestButton_Click"/>
                    <!-- border -->
                    <Border Margin="10,5,10,0" Style="{StaticResource Content.Border}"/>
                    <!-- 탭 알림 -->
                    <Grid Margin="20,10,20,15" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_TOAST_USE_TAB], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Column="1"
                            x:Name="TabNotificationCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="TabNotificationCheckBox_Checked" Unchecked="TabNotificationCheckBox_Unchecked"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <Image HorizontalAlignment="Stretch" Stretch="UniformToFill" StretchDirection="DownOnly" RenderOptions.BitmapScalingMode="HighQuality"
                                       Source="/GFAlarm;component/Resource/image/guide/tab_noti.png"/>
                                <uc:HtmlTextBlock 
                                    Style="{StaticResource Content.ToolTip.TextBlock}"
                                    Margin="0,5,0,0"
                                    Html="{Binding Path=[SETTING_TOAST_USE_TAB_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                </StackPanel>
                <!-- [그룹] 메일 알림 -->
                <Border
                    x:Name="MailGroupBox"
                    Style="{StaticResource GroupBox.Border}"
                    MouseLeftButtonDown="GroupBox_MouseLeftButtonDown">
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <!-- icon -->
                            <ColumnDefinition Width="*"/>
                            <!-- title -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- arrow -->
                        </Grid.ColumnDefinitions>
                        <!-- icon -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="0"
                            Style="{StaticResource GroupBox.Icon}"
                            Width="16" Height="11" Kind="Email"/>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource GroupBox.Title.TextBlock}"
                            Text="{Binding Path=[SETTING_MAIL_GROUP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- indicator -->
                        <TextBlock
                            Grid.Column="2"
                            x:Name="MailGroupBox_OnOff"
                            Style="{StaticResource Base.TextBlock}"
                            Margin="0,0,28,0" VerticalAlignment="Center" Foreground="{StaticResource RedBrush}"
                            Text="OFF"/>
                        <!-- arrow -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="2"
                            x:Name="MailGroupBox_Arrow"
                            Style="{StaticResource GroupBox.Arrow.Icon}"
                            Kind="ChevronDown"/>
                    </Grid>
                </Border>
                <!-- [목록] 메일 알림 -->
                <StackPanel
                    x:Name="MailListBox"
                    Orientation="Vertical">
                    <!-- 메일 알림 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource Content.Title.Big.TextBlock}"
                            Text="{Binding Path=[SETTING_MAIL_USE_MAIL], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Row="0" Grid.Column="1"
                            x:Name="MailCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="MailCheckBox_Checked" Unchecked="MailCheckBox_Unchecked"/>
                        <!-- comment -->
                        <uc:HtmlTextBlock
                            Grid.Row="1" Grid.ColumnSpan="2"
                            x:Name="MailCommentTextBlock"
                            Style="{StaticResource Base.TextBlock}"
                            Margin="0,3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"
                            FontSize="11" Foreground="#666666" TextWrapping="Wrap"
                            Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"/>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <Image HorizontalAlignment="Stretch" Stretch="UniformToFill" StretchDirection="DownOnly" RenderOptions.BitmapScalingMode="HighQuality"
                                       Source="/GFAlarm;component/Resource/image/guide/win_noti_mail.png"/>
                                <uc:HtmlTextBlock 
                                    Style="{StaticResource Content.ToolTip.TextBlock}"
                                    Margin="0,5,0,0"
                                    Html="{Binding Path=[SETTING_MAIL_USE_MAIL_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- SMTP 주소 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_MAIL_SMTP_ADDRESS], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- textbox -->
                        <TextBox
                            Grid.Row="1"
                            x:Name="SmtpHostTextBox"
                            Style="{StaticResource Content.TextBox}" 
                            LostFocus="SmtpHostTextBox_LostFocus"/>
                    </Grid>
                    <!-- 알림 보낼 메일주소 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_MAIL_FROM_MAIL_ADDRESS], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- textbox -->
                        <TextBox
                            Grid.Row="1"
                            x:Name="FromMailAddressTextBox"
                            Style="{StaticResource Content.TextBox}"
                            LostFocus="FromMailAddressTextBox_LostFocus"/>
                    </Grid>
                    <!-- 알림 보낼 메일 앱 비밀번호 (알리미용) -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_MAIL_FROM_MAIL_PASSWORD], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- textbox -->
                        <TextBox
                            Grid.Row="1"
                            x:Name="FromMailPasswordTextBox"
                            Style="{StaticResource Content.TextBox}" 
                            LostFocus="FromMailPasswordTextBox_LostFocus"/>
                    </Grid>
                    <!-- 알림 받을 메일주소 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_MAIL_TO_MAIL_ADDRESS], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- textbox -->
                        <TextBox
                            Grid.Row="1"
                            x:Name="ToMailAddressTextBox"
                            Style="{StaticResource Content.TextBox}" 
                            LostFocus="ToMailAddressTextBox_LostFocus"/>
                    </Grid>
                    <!-- 테스트 알림 -->
                    <Button
                        x:Name="MailTestButton"
                        Style="{StaticResource Base.Button}"
                        Width="90" Margin="0,10,20,15" Padding="5,4" HorizontalAlignment="Right" VerticalAlignment="Center"
                        FontSize="11"
                        Content="{Binding Path=[SETTING_MAIL_TEST_BUTTON], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"
                        Click="MailTestButton_Click"/>
                </StackPanel>
                <!-- [그룹] 파일 저장 설정 -->
                <Border
                    x:Name="FileSaveGroupBox"
                    Style="{StaticResource GroupBox.Border}"
                    MouseLeftButtonDown="GroupBox_MouseLeftButtonDown">
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <!-- icon -->
                            <ColumnDefinition Width="*"/>
                            <!-- title -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- arrow -->
                        </Grid.ColumnDefinitions>
                        <!-- icon -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="0"
                            Style="{StaticResource GroupBox.Icon}"
                            Width="16" Height="14" Kind="File"/>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource GroupBox.Title.TextBlock}"
                            Text="{Binding Path=[SETTING_FILE_GROUP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- arrow -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="2"
                            x:Name="FileSaveGroupBox_Arrow"
                            Style="{StaticResource GroupBox.Arrow.Icon}"
                            Kind="ChevronDown"/>
                    </Grid>
                </Border>
                <!-- [목록] 파일 저장 설정 -->
                <StackPanel
                    x:Name="FileSaveListBox"
                    Orientation="Vertical">
                    <!-- 파일 인코딩 -->
                    <Grid Margin="20,10,20,0" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
