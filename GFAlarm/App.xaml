                                        </DiscreteObjectKeyFrame>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.ExitActions>-->
                    </Trigger>
                    <!--<Trigger Property="Canvas.IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Trigger>-->
                </Style.Triggers>
            </Style>

            <!-- ================================================= -->
            <!-- ================= 상태 바 스타일 ================ -->
            <!-- ================================================= -->
            <Style x:Key="StatusbarTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}">
                <!--<Setter Property="Margin" Value="3,2,3,0"/>-->
                <Setter Property="Margin" Value="3,1,3,0"/>
                <Setter Property="FontFamily" Value="Gulim"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
                <Setter Property="TextOptions.TextHintingMode" Value="Fixed"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <!-- ================================================= -->
            <!-- ================== 기본 스타일 ================== -->
            <!-- ================================================= -->
            
            <!-- TextBlock -->
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI, Meiryo UI, Malgun Gothic"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- TextBox -->
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI, Meiryo UI, Malgun Gothic"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="CaretBrush" Value="#FFFFFF"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- PasswordBox -->
            <Style TargetType="PasswordBox">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI, Meiryo UI, Malgun Gothic"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- Button -->
            <Style TargetType="Button" BasedOn="{StaticResource SquareButtonStyle}">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI, Meiryo UI, Malgun Gothic"/>
                <Setter Property="FontWeight" Value="Regular"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- CheckBox -->
            <Style TargetType="CheckBox" BasedOn="{StaticResource MetroCheckBox}">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- Slider --> 
            <Style TargetType="Slider" BasedOn="{StaticResource FlatSlider}">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- ListBox Color Style -->
            <SolidColorBrush x:Key="ListBox.Static.Background" Color="Transparent" />
            <SolidColorBrush x:Key="ListBox.Static.Border" Color="Transparent" />
            <SolidColorBrush x:Key="ListBox.Disabled.Background" Color="Transparent" />
            <SolidColorBrush x:Key="ListBox.Disabled.Border" Color="Transparent" />
            <!-- ListBox -->
            <Style TargetType="ListBox">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ListBox}">
                            <ItemsPresenter x:Name="TemplateListBox"/>
                            <ControlTemplate.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsGrouping" Value="true" />
                                        <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false" />
                                    </MultiTrigger.Conditions>
                                </MultiTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Resources>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <ContentPresenter/>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Style.Resources>
            </Style>

            <!-- Icon -->
            <Style x:Key="IconStyle" TargetType="iconPacks:PackIconMaterial">
                <!--<Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>-->
                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <!-- ================================================= -->
            <!-- ================ 커스텀 스타일 ================== -->
            <!-- ================================================= -->
            
            <!-- ToolTip > StackPanel 스타일 -->
            <Style x:Key="ToolTipStackPanelStyle" TargetType="{x:Type StackPanel}">
                <Setter Property="MaxWidth" Value="220"/>
                <Setter Property="Orientation" Value="Vertical"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- ToolTip > StackPanel > TextBlock 스타일 -->
            <Style x:Key="ToolTipTextBlockStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            
            <!-- ToolTip > Title 스타일 -->
            <Style x:Key="ToolTipTitleStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="3,10,0,5"/>
                <Setter Property="FontSize" Value="13"/>
                <!--<Setter Property="FontWeight" Value="Bold"/>-->
            </Style>
            <!-- ToolTip > Table 스타일 -->
            <Style x:Key="ToolTipTableStyle" TargetType="{x:Type Border}">
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="Background" Value="Transparent"/>
                <!--<Setter Property="BorderBrush" Value="#FF7E7E7E"/>-->
                <Setter Property="BorderBrush" Value="#30FFFFFF"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            <!-- ToolTip > Table Text 스타일 -->
            <Style x:Key="ToolTipTableTextStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <!--<Setter Property="Margin" Value="6,0"/>-->
                <!--<Setter Property="Padding" Value="3"/>-->
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI"/>
            </Style>

            <!-- Group > Grid 스타일 -->
            <Style x:Key="GroupGridStyle" TargetType="{x:Type Grid}">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            <!-- Group > Guide 스타일 -->
            <Style x:Key="GroupGuideStyle" TargetType="{x:Type Border}">
                <Setter Property="Height" Value="1"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Background" Value="#FFB400"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            <!-- Group > Border 스타일 -->
            <Style x:Key="GroupBorderStyle" TargetType="{x:Type Border}">
                <Setter Property="Background" Value="{StaticResource BackgroundBrightBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BackgroundBrush}"/>
                <!--<Setter Property="BorderThickness" Value="0,0,1,1"/>-->
                <Setter Property="BorderThickness" Value="0,0,2,2"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            <!-- Group > Icon 스타일 -->
            <Style x:Key="GroupIconStyle" TargetType="{x:Type iconPacks:PackIconMaterial}" BasedOn="{StaticResource IconStyle}">
                <Setter Property="Margin" Value="8,-1,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
            </Style>
           
            <!-- Group > Arrow 스타일 -->
            <Style x:Key="GroupArrowStyle" TargetType="{x:Type iconPacks:PackIconMaterial}">
                <Setter Property="Width" Value="11"/>
                <Setter Property="Height" Value="11"/>
                <Setter Property="Margin" Value="0,-1,10,0"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <!-- GroupBox > Border 스타일 -->
            <Style x:Key="GroupBoxBorderStyle" TargetType="Border">
                <Setter Property="Height" Value="32"/>
                <Setter Property="Background" Value="{StaticResource BackgroundBrightBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BackgroundBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,2,2"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>
            <!-- GroupBox > Icon 스타일 -->
            <Style x:Key="GroupBoxIconStyle" TargetType="iconPacks:PackIconMaterial" BasedOn="{StaticResource IconStyle}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="{StaticResource NormalBrush}"/>
            </Style>
            <!-- GroupBox > Title 스타일 -->
            <Style x:Key="GroupBoxTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="5,0,0,0"/>
                <Setter Property="Foreground" Value="{StaticResource NormalBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                <Setter Property="TextWrapping" Value="NoWrap"/>
            </Style>
            <!-- GroupBox > Count > Border 스타일 -->
            <Style x:Key="GroupBoxCountBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource GrayBrush}"/>
                <Setter Property="Margin" Value="5,-2,8,0"/>
                <Setter Property="Padding" Value="5,0"/>
                <Setter Property="Width" Value="24"/>
                <Setter Property="Height" Value="18"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="3"/>
            </Style>
            <!-- GroupBox > Count > TextBlock 스타일 -->
            <Style x:Key="GroupBoxCountTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="0,-1,0,0"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI, Meiryo UI Bold, Malgun Gothic Bold"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <!-- Group > Arrow 스타일 -->
            <Style x:Key="GroupBoxArrowStyle" TargetType="{x:Type iconPacks:PackIconMaterial}">
                <Setter Property="Width" Value="11"/>
                <Setter Property="Height" Value="11"/>
                <Setter Property="Margin" Value="0,-1,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <!-- Overlay > Icon 스타일 -->
            <Style x:Key="OverlayIconStyle" TargetType="{x:Type iconPacks:PackIconMaterial}" BasedOn="{StaticResource IconStyle}">
                <Setter Property="Margin" Value="0,0,0,60"/>
                <Setter Property="Width" Value="64"/>
                <Setter Property="Height" Value="64"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#FFFFFFFF"/>
            </Style>
            <!-- Overlay > TextBlock 스타일 -->
            <Style x:Key="OverlayTextStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="0,90,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="#FFFFFFFF"/>
            </Style>
            
            <!-- ListBox > Template 스타일 -->
            <Style x:Key="ItemTemplateStyle" TargetType="{x:Type Grid}">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="ToolTipService.Placement" Value="Right"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            <!-- ListBox > Slot 스타일 -->
            <Style x:Key="ItemSlotStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="5,0,0,5"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="Foreground" Value="#10FFFFFF"/>
            </Style>
            <!-- ListBox > Title 스타일 -->
            <Style x:Key="ItemTitleStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="30,1,0,0"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="TextWrapping" Value="NoWrap"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>
            <!-- ListBox > Subtitle 스타일 -->
            <Style x:Key="ItemSubtitleStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="30,0,0,4"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Foreground" Value="#CCFFFFFF"/>
                <Setter Property="TextWrapping" Value="NoWrap"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>
            <!-- ListBox > RemainTime 스타일 -->
            <Style x:Key="ItemRemainTimeStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="0,1,5,0"/>
                <Setter Property="FontFamily" Value="./Resource/font/#Segoe UI"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
            </Style>
            <!-- ListBox > EndTime 스타일 -->
            <Style x:Key="ItemEndTimeStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="Margin" Value="0,0,5,4"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="Foreground" Value="#CCFFFFFF"/>
            </Style>
            <!-- ListBox > Delimiter 스타일 -->
            <Style x:Key="ItemDelimiterStyle" TargetType="{x:Type Border}">
                <Setter Property="Height" Value="1"/>
                <Setter Property="Margin" Value="5,0"/>
                <Setter Property="BorderBrush" Value="#10FFFFFF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>

            <Style x:Key="SettingTextBlockStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockBaseStyle}">
                <Setter Property="TextWrapping" Value="NoWrap"/>
                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            </Style>

            <!-- ================================================= -->
            <!-- ====================== 기타 ===================== -->
            <!-- ================================================= -->
            <!-- HTML 텍스트 박스 스타일 -->
            <!--<uc:HtmlFormatter x:Key="HtmlFormatter"/>-->

        </ResourceDictionary>
    </Application.Resources>
</Application>
