                                    Html="{Binding Path=[SETTING_EXTRA_LOG_PACKET_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                    <!-- border -->
                    <Border Margin="10,15,10,0" Style="{StaticResource ContentBorderStyle}"/>
                </StackPanel>
                <!-- 프로그램 정보 -->
                <StackPanel x:Name="ProgramInfoGroupBox" Orientation="Vertical">
                    <!-- program info -->
                    <Image 
                        x:Name="ProgramInfo"
                        Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,20,0,0"
                        Source="/GFAlarm;component/Resource/image/box.png" 
                        RenderOptions.BitmapScalingMode="HighQuality" Cursor="Hand"/>
                    <TextBlock
                        Style="{StaticResource TextBlockBaseStyle}"
                        Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                        TextAlignment="Center">
                        <Run Text="{Binding Path=[PROGRAM_TITLE], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/><LineBreak/>
                        <Run Text="v"/><Run x:Name="VersionTextBlock" Text="0.00"/>
                    </TextBlock>
                    <!-- border -->
                    <Border Margin="10,10,10,0" Style="{StaticResource ContentBorderStyle}"/>
                    <!-- developer -->
                    <TextBlock
                        Style="{StaticResource TextBlockBaseStyle}"
                        Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                        TextAlignment="Center" FontSize="11">
                        <Hyperlink RequestNavigate="Hyperlink_RequestNavigate" NavigateUri="https://gall.dcinside.com/mgallery/board/lists?id=micateam">MICATEAM 마이너 갤러리</Hyperlink><LineBreak/>
                        <Run Text="es"/> <Run Text="(EagleSix#343650)"/><LineBreak/>
                        <Run Text="kchang06.thk@gmail.com"/>
                    </TextBlock>
                    <!-- border -->
                    <Border Margin="10,5,10,0" Style="{StaticResource ContentBorderStyle}"/>
                    <!-- bug report -->
                    <uc:HtmlTextBlock
                        x:Name="BugReportTextBlock"
                        Style="{StaticResource TextBlockBaseStyle}"
                        Margin="20,5,20,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                        TextWrapping="Wrap" TextAlignment="Center" FontSize="11"
                        Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"
                        Html="{Binding Path=[PROGRAM_BUG_REPORT], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                    <!-- border -->
                    <Border x:Name="TranslatorBorder" Margin="10,5,10,0" Style="{StaticResource ContentBorderStyle}"/>
                    <!-- translator -->
                    <uc:HtmlTextBlock Style="{StaticResource TextBlockBaseStyle}"
                                      x:Name="TranslatorTextBlock"
                                      Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      TextAlignment="Center" FontSize="11"
                                      Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"
                                      Html="{Binding Path=[TRANSLATED_BY], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                    <!-- border -->
                    <Border Margin="10,5,10,0" Style="{StaticResource ContentBorderStyle}"/>
                    <!-- copyright1 -->
                    <uc:HtmlTextBlock Style="{StaticResource TextBlockBaseStyle}"
                                      Margin="20,5,20,0" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      TextAlignment="Center" FontSize="11" TextWrapping="Wrap"
                                      Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"
                                      Html="{Binding Path=[PROGRAM_DESCRIPTION], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                    <!-- border -->
                    <Border Margin="10,5,10,0" Style="{StaticResource ContentBorderStyle}"/>
                    <!-- copyright2 -->
                    <uc:HtmlTextBlock Style="{StaticResource TextBlockBaseStyle}"
                                      Margin="20,5,20,15" HorizontalAlignment="Center" VerticalAlignment="Top"
                                      TextAlignment="Center" FontSize="11" TextWrapping="Wrap"
                                      Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"
                                      Html="{Binding Path=[PROGRAM_COPYRIGHT], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
