                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <!-- icon -->
                            <ColumnDefinition Width="*"/>
                            <!-- title -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- arrow -->
                        </Grid.ColumnDefinitions>
                        <!-- icon -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="0"
                            Style="{StaticResource Base.Icon}"
                            Width="16" Height="12" Margin="5,1,0,0" VerticalAlignment="Center"
                            Foreground="#FFFFFF" Kind="DiamondStone"/>
                        <!-- title -->
                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource GroupBox.Title.TextBlock}"
                            Text="{Binding Path=[SETTING_NOTIFICATION_EXTRA_GROUP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- arrow -->
                        <iconPacks:PackIconMaterial
                            Grid.Column="2"
                            x:Name="ExtraGroupBox_Arrow"
                            Style="{StaticResource GroupBox.Arrow.Icon}"
                            Kind="ChevronDown"/>
                    </Grid>
                </Border>
                <!-- [목록] 기타 -->
                <StackPanel
                    x:Name="ExtraListBox"
                    Orientation="Vertical">
                    <!-- 미리 알림 -->
                    <Grid Margin="20,10,20,10" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <!-- title -->
                        <TextBlock
                            Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource Content.Title.Small.TextBlock}"
                            Text="{Binding Path=[SETTING_NOTIFICATION_EXTRA_ADVANCED_NOTIFICATION], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        <!-- checkbox -->
                        <CheckBox
                            Grid.Row="0" Grid.Column="1"
                            x:Name="EarlyNotifyCheckBox"
                            Style="{StaticResource Base.CheckBox}"
                            Checked="EarlyNotifyCheckBox_Checked" Unchecked="EarlyNotifyCheckBox_Unchecked"/>
                        <!-- slider -->
                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Slider
                                Grid.Column="0"
                                x:Name="EarlyNotifySlider"
                                MinHeight="8" VerticalAlignment="Center"
                                TickFrequency="1" IsSnapToTickEnabled="True" IsMoveToPointEnabled="True"/>
                            <!-- counter -->
                            <TextBox
                                Grid.Column="1"
                                x:Name="EarlyNotifyTextBox"
                                Style="{StaticResource Content.Slider.TextBox}"
                                LostFocus="EarlyNotifyTextBox_LostFocus"/>
                        </Grid>
                        <!-- tooltip -->
                        <Grid.ToolTip>
                            <StackPanel Style="{StaticResource Content.ToolTip.StackPanel}">
                                <uc:HtmlTextBlock Style="{StaticResource Content.ToolTip.TextBlock}"
                                                  Html="{Binding Path=[SETTING_NOTIFICATION_EXTRA_ADVANCED_NOTIFICATION_TOOLTIP], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            </StackPanel>
                        </Grid.ToolTip>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
