 <UserControl 
     x:Class="GFAlarm.View.Menu.DashboardView"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:data="clr-namespace:GFAlarm.Data"
     xmlns:sys="clr-namespace:System;assembly=mscorlib"
     xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
     xmlns:ls="clr-namespace:LocalizationResources;assembly=LocalizationResources"
     xmlns:uc="http://www.quickzip.org/BaseControls"
     mc:Ignorable="d" 
     
     SnapsToDevicePixels="True"
     d:DesignHeight="300" 
     d:DesignWidth="200">
    <Grid Margin="0,0,2,0">
        <!-- 오버레이 -->
        <Grid x:Name="EmptyOverlay" Panel.ZIndex="100" Visibility="Visible"
              Background="{StaticResource BackgroundBrush}">
            <iconPacks:PackIconMaterial Style="{DynamicResource OverlayIconStyle}" 
                                        Kind="EmoticonDead"/>
            <uc:HtmlTextBlock Style="{DynamicResource OverlayTextStyle}"  
                              Html="{Binding Path=[OVERLAY_EMPTY_DASHBOARD], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
        </Grid>
        
        <!-- 리스트 박스들 -->
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <StackPanel x:Name="DashboardStackPanel" 
                        Orientation="Vertical">
                
                <!-- 공유보석 -->
                <StackPanel x:Name="ShareGem">
                    <!-- groupbox -->
                    <Border x:Name="ShareGemGroupBox" Visibility="Collapsed"
                            Style="{StaticResource GroupBoxBorderStyle}">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- icon -->
                            <iconPacks:PackIconMaterial
                                Grid.Column="0"
                                Style="{StaticResource GroupBoxIconStyle}"
                                Foreground="{StaticResource OrangeBrush}"
                                Width="16" Height="13" Kind="DiamondStone"/>
                            <!-- title -->
                            <TextBlock 
                                Grid.Column="1" 
                                Style="{StaticResource GroupBoxTitleStyle}"
                                Text="{Binding Path=[UNRECEIVE_SHARE_GEM], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- 공유전지 -->
                <StackPanel x:Name="ShareBattery">
                    <!-- groupbox -->
                    <Border x:Name="ShareBatteryGroupBox" Visibility="Collapsed"
                            Style="{StaticResource GroupBoxBorderStyle}">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- icon -->
                            <iconPacks:PackIconMaterial
                                Grid.Column="0"
                                Style="{StaticResource GroupBoxIconStyle}"
                                Foreground="{StaticResource OrangeBrush}"
                                Width="16" Height="14" Kind="BatteryCharging"/>
                            <!-- title -->
                            <TextBlock 
                                Grid.Column="1" 
                                Style="{StaticResource GroupBoxTitleStyle}"
                                Text="{Binding Path=[UNRECEIVE_SHARE_BATTERY], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- 지원현황 -->
                <StackPanel x:Name="DispatchedEchelon">
                    <!-- lower guide -->
                    <Border x:Name="DispatchedEchelonLowerGuide" Visibility="Collapsed"
                            Style="{StaticResource GroupGuideStyle}"/>
                    <!-- groupbox -->
                    <Border x:Name="DispatchedEchelonGroupBox" Visibility="Collapsed"
                            Style="{StaticResource GroupBoxBorderStyle}"
                            MouseDown="GroupBox_MouseDown" MouseMove="Group_MouseMove" MouseUp="GroupBox_MouseUp">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- icon -->
                            <iconPacks:PackIconMaterial
                                Grid.Column="0"
                                Style="{StaticResource GroupBoxIconStyle}"
                                Width="16" Height="15" Kind="ChessKnight"/>
                            <!-- title -->
                            <TextBlock
                                Grid.Column="1"
                                Style="{StaticResource GroupBoxTitleStyle}"
                                Text="{Binding Path=[DASHBOARD_GROUP_DISPATCHED_ECHELON], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                            <!-- count -->
                            <Border 
                                Grid.Column="2" 
                                Style="{StaticResource GroupBoxCountBorderStyle}">
                                <TextBlock 
                                    x:Name="DispatchedEchelonGroupBox_Count"
                                    Style="{StaticResource GroupBoxCountTextBlockStyle}"
                                    Text="0"/>
                            </Border>
                            <!-- arrow -->
                            <iconPacks:PackIconMaterial 
                                Grid.Column="3" 
                                x:Name="DispatchedEchelonGroupBox_Arrow"
                                Style="{StaticResource GroupBoxArrowStyle}"
                                Kind="ChevronDown"/>
                        </Grid>
                    </Border>
                    <!-- listbox -->
                    <ListBox x:Name="DispatchedEchelonListBox" Visibility="Collapsed">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="TemplateGrid" 
                                      Style="{StaticResource ItemTemplateStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- 슬롯 -->
                                    <TextBlock x:Name="SlotTextBlock" Grid.ColumnSpan="2"
                                               Style="{StaticResource ItemSlotStyle}"
                                               Text="{Binding Path=TBSlot, Mode=OneWay}"/>
                                    <!-- 지원코드 -->
                                    <TextBlock x:Name="TitleTextBlock" Grid.Column="0"
                                               Style="{StaticResource ItemTitleStyle}"
                                               Margin="30,1,0,0"
                                               Text="{Binding Path=TBCode, Mode=OneWay}"/>
                                    <!-- 지원종류 -->
                                    <TextBlock x:Name="SubtitleTextBlock" Grid.Column="0"
                                               Style="{StaticResource ItemSubtitleStyle}">
                                        <Run x:Name="TypeTextBlock" Text="{Binding Path=TBType, Mode=OneWay}"/>
                                        <Run x:Name="NumberTextBlock" Text="{Binding Path=TBNumber, Mode=OneWay}"/>
                                    </TextBlock>
                                    <!-- 남은 시간 -->
                                    <TextBlock x:Name="RemainTimeTextBlock" Grid.ColumnSpan="2"
                                               Style="{StaticResource ItemRemainTimeStyle}"
                                               Text="{Binding Path=TBRemainTime, Mode=OneWay}"/>
                                    <!-- 완료 시간 -->
                                    <TextBlock x:Name="EndTimeTextBlock" Grid.ColumnSpan="2"
                                               Style="{StaticResource ItemEndTimeStyle}"
                                               Text="{Binding Path=TBEndTime, Mode=OneWay}"/>
                                    <!-- 구분선 -->
                                    <Border x:Name="Delimiter" Grid.ColumnSpan="2" 
                                            Style="{StaticResource ItemDelimiterStyle}"/>
                                    <!-- tooltip -->
                                    <Grid.ToolTip>
                                        <StackPanel Style="{StaticResource ToolTipStackPanelStyle}" Orientation="Vertical">
                                            <!-- 자율작전 툴팁 -->
                                            <Grid x:Name="AutoMissionToolTipGrid" Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition MinWidth="40"/>
                                                    <ColumnDefinition MinWidth="45"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <!-- 투입 제대 -->
                                                <iconPacks:PackIconMaterial 
                                                    Grid.Row="0" Grid.ColumnSpan="2" 
                                                    Style="{StaticResource IconStyle}"
                                                    Height="14" Margin="3,0,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                    Foreground="{StaticResource GreenBrush}" 
                                                    Kind="ChessKnight"/>
                                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                                           Style="{StaticResource ToolTipTitleStyle}"
                                                           Margin="24,0,0,5"
                                                           Text="{Binding Path=[DISPATCHED_ECHELON], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                                                <Border Grid.Row="1" Grid.ColumnSpan="2"
                                                        Style="{StaticResource ToolTipTableStyle}"
                                                        Padding="6,2,0,5"
                                                        BorderThickness="0,1">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               FontSize="14" Foreground="{StaticResource OrangeBrush}"
                                                               Text="{Binding Path=TBTeamIds, Mode=OneWay}"/>
                                                </Border>
                                                <!-- 투입 자원 -->
                                                <iconPacks:PackIconMaterial 
                                                    Grid.Row="2" Grid.ColumnSpan="2"
                                                    Style="{StaticResource IconStyle}"
                                                    Height="11" Margin="3,10,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"
                                                    Foreground="{StaticResource GreenBrush}"
                                                    Kind="Archive"/>
                                                <TextBlock Grid.Row="2"   Grid.ColumnSpan="2"
                                                           Style="{StaticResource ToolTipTitleStyle}"
                                                           Margin="24,10,0,5"
                                                           Text="{Binding Path=[SPEND_RESOURCE], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                                                <!-- row header -->
                                                <Border Grid.Row="3" Grid.Column="0" BorderThickness="0,1,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}" HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/manpower.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="4" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}" HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/ammo.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="5" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}" HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/mre.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="6" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}" HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/part.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <!-- spend resources -->
                                                <Border Grid.Row="3" Grid.Column="1" BorderThickness="0,1,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="{StaticResource OrangeBrush}">
                                                        <Run Text="{Binding Path=spendResource[0], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="4" Grid.Column="1" BorderThickness="0,0,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="{StaticResource OrangeBrush}">
                                                        <Run Text="{Binding Path=spendResource[0], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="5" Grid.Column="1" BorderThickness="0,0,0,1" 
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="{StaticResource OrangeBrush}">
                                                        <Run Text="{Binding Path=spendResource[0], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="6" Grid.Column="1" BorderThickness="0,0,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}" >
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}" 
                                                               HorizontalAlignment="Right" Foreground="{StaticResource OrangeBrush}">
                                                        <Run Text="{Binding Path=spendResource[1], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                            <!-- 군수지원 툴팁 -->
                                            <Grid x:Name="OperationToolTipGrid" Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition MinWidth="40"/>
                                                    <ColumnDefinition MinWidth="45"/>
                                                    <ColumnDefinition MinWidth="45"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <!-- 획득 자원 -->
                                                <iconPacks:PackIconMaterial 
                                                    Grid.Row="0" Grid.ColumnSpan="3"
                                                    Style="{StaticResource IconStyle}"
                                                    Height="12" Margin="3,0,0,5" VerticalAlignment="Center"
                                                    Foreground="{StaticResource OrangeBrush}"
                                                    Kind="Archive"/>
                                                <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                                                           Style="{StaticResource ToolTipTitleStyle}"
                                                           Margin="24,0,0,5"
                                                           Text="{Binding Path=[REWARD_RESOURCE], Mode=OneWay, Source={x:Static ls:LanguageResources.Instance}}"/>
                                                <!-- row header -->
                                                <Border Grid.Row="1" Grid.Column="0" BorderThickness="0,1,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/manpower.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="2" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/ammo.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="3" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/mre.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="4" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Center">
                                                        <InlineUIContainer>
                                                            <Image Source="/GFAlarm;component/Resource/image/icon/res/part.png" 
                                                                   Height="16" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="5" Grid.Column="0" BorderThickness="0,0,1,1"
                                                        x:Name="ItemIconBorder1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                </Border>
                                                <!-- reward resources -->
                                                <Border Grid.Row="1" Grid.Column="1" BorderThickness="0,1,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="ManpowerTextBlock" Text="{Binding Path=rewardResource[0], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="2" Grid.Column="1" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="AmmoTextBlock" Text="{Binding Path=rewardResource[1], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="3" Grid.Column="1" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="MreTextBlock" Text="{Binding Path=rewardResource[2], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="4" Grid.Column="1" BorderThickness="0,0,1,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}" 
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="PartTextBlock" Text="{Binding Path=rewardResource[3], Mode=OneWay}"/>
                                                    </TextBlock>
                                                </Border>
                                                <!-- reward resources (per hour) -->
                                                <Border Grid.Row="1" Grid.Column="2" BorderThickness="0,1,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="ManpowerHourTextBlock" Text="{Binding Path=rewardResourcePerHour[0], Mode=OneWay}"/><Run Foreground="#FFFFFF" Text="/h"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="2" Grid.Column="2" BorderThickness="0,0,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="AmmoHourTextBlock" Text="{Binding Path=rewardResourcePerHour[1], Mode=OneWay}"/><Run Foreground="#FFFFFF" Text="/h"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="3" Grid.Column="2" BorderThickness="0,0,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="MreHourTextBlock" Text="{Binding Path=rewardResourcePerHour[2], Mode=OneWay}"/><Run Foreground="#FFFFFF" Text="/h"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Grid.Row="4" Grid.Column="2" BorderThickness="0,0,0,1"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource ToolTipTableTextStyle}"
                                                               HorizontalAlignment="Right" Foreground="#FFB400">
                                                        <Run x:Name="PartHourTextBlock" Text="{Binding Path=rewardResourcePerHour[3], Mode=OneWay}"/><Run Foreground="#FFFFFF" Text="/h"/>
                                                    </TextBlock>
                                                </Border>
                                                <!-- reward items -->
                                                <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,1"
                                                        x:Name="ItemIconBorder2"
                                                        Style="{StaticResource ToolTipTableStyle}">
                                                    <TextBlock Style="{StaticResource TextBlockBaseStyle}" 
                                                               Padding="0,3,0,0" HorizontalAlignment="Center" FontSize="13">
                                                        <InlineUIContainer>
                                                            <Image x:Name="ItemIcon1TextBlock" Source="{Binding Path=rewardItemIcon[0], Mode=OneWay}" 
                                                                   Width="24" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer><Run x:Name="ItemCount1TextBlock" Text="1"/>
                                                        <InlineUIContainer>
                                                            <Image x:Name="ItemIcon2TextBlock" Source="{Binding Path=rewardItemIcon[1], Mode=OneWay}" 
                                                                   Width="24" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True"/>
                                                        </InlineUIContainer><Run x:Name="ItemCount2TextBlock" Text="1"/>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </Grid.ToolTip>
                                </Grid>
                                <!-- triggers -->
                                <DataTemplate.Triggers>
                                    <!-- 마지막 목록 -->
                                    <DataTrigger Binding="{Binding Path=isLast, Mode=OneWay}" Value="True">
                                        <Setter TargetName="Delimiter" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <!-- 남은 시간이 00:00:00 -->
                                    <DataTrigger Binding="{Binding Path=TBRemainTime, Mode=OneWay}" Value="00:00:00">
                                        <Setter TargetName="RemainTimeTextBlock" Property="Foreground" Value="#FFB400"/>
                                    </DataTrigger>
                                    <!-- 군수지원인 경우 -->
                                    <DataTrigger Binding="{Binding Path=type, Mode=OneWay}" Value="1">
                                        <Setter TargetName="TypeTextBlock" Property="Foreground" Value="#FFB400"/>
                                        <Setter TargetName="AutoMissionToolTipGrid" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <!-- 자율작전인 경우 -->
                                    <DataTrigger Binding="{Binding Path=type, Mode=OneWay}" Value="2">
                                        <Setter TargetName="TypeTextBlock" Property="Foreground" Value="#8FC41F"/>
                                        <Setter TargetName="OperationToolTipGrid" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <!-- 획득 자원 -->
                                    <DataTrigger Binding="{Binding Path=rewardResource[0], Mode=OneWay}" Value="0">
                                        <Setter TargetName="ManpowerTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardResource[1], Mode=OneWay}" Value="0">
                                        <Setter TargetName="AmmoTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardResource[2], Mode=OneWay}" Value="0">
                                        <Setter TargetName="MreTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardResource[3], Mode=OneWay}" Value="0">
                                        <Setter TargetName="PartTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <!-- 아이템 -->
                                    <DataTrigger Binding="{Binding Path=rewardItemIcon[0], Mode=OneWay}" Value="">
                                        <Setter TargetName="ItemCount1TextBlock" Property="Text" Value=""/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardItemIcon[1], Mode=OneWay}" Value="">
                                        <Setter TargetName="ItemCount2TextBlock" Property="Text" Value=""/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding Path=rewardItemIcon[0], Mode=OneWay}" Value=""/>
                                            <Condition Binding="{Binding Path=rewardItemIcon[1], Mode=OneWay}" Value=""/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter TargetName="ItemIconBorder1" Property="Visibility" Value="Collapsed"/>
                                        <Setter TargetName="ItemIconBorder2" Property="Visibility" Value="Collapsed"/>
                                    </MultiDataTrigger>
                                    <!-- 시간당 획득 자원 -->
                                    <DataTrigger Binding="{Binding Path=rewardResourcePerHour[0], Mode=OneWay}" Value="0">
                                        <Setter TargetName="ManpowerHourTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardResourcePerHour[1], Mode=OneWay}" Value="0">
                                        <Setter TargetName="AmmoHourTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardResourcePerHour[2], Mode=OneWay}" Value="0">
                                        <Setter TargetName="MreHourTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Path=rewardResourcePerHour[3], Mode=OneWay}" Value="0">
                                        <Setter TargetName="PartHourTextBlock" Property="Foreground" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- upper guide -->
                    <Border x:Name="DispatchedEchelonUpperGuide" Visibility="Collapsed"
                            Style="{StaticResource GroupGuideStyle}"/>
                </StackPanel>
                
                <!-- 인형제조 -->
                <StackPanel x:Name="ProduceDoll">
                    <!-- lower guide -->
                    <Border x:Name="ProduceDollLowerGuide" Visibility="Collapsed"
                            Style="{StaticResource GroupGuideStyle}"/>
                    <!-- groupbox -->
                    <Border x:Name="ProduceDollGroupBox" Visibility="Collapsed"
                            Style="{StaticResource GroupBoxBorderStyle}"
                            MouseDown="GroupBox_MouseDown" MouseMove="Group_MouseMove" MouseUp="GroupBox_MouseUp">
                        <Grid Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
