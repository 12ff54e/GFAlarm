                                    <TextBlock x:Name="RemainTimeTextBlock" Grid.Column="1"
                                               Style="{StaticResource ItemRemainTimeStyle}"
                                               Text="{Binding Path=TBRemainTime, Mode=OneWay}"/>
                                    <!--예정시간-->
                                    <TextBlock x:Name="EndTimeTextBlock" Grid.Column="1"
                                               Style="{StaticResource ItemEndTimeStyle}"
                                               Text="{Binding Path=TBEndTime, Mode=OneWay}"/>
                                    <!--구분선-->
                                    <Border x:Name="Delimiter" Grid.ColumnSpan="2" 
                                            Style="{StaticResource ItemDelimiterStyle}"/>
                                </Grid>
                                <DataTemplate.Triggers>
                                    <!-- 마지막 목록 -->
                                    <DataTrigger Binding="{Binding Path=isLast, Mode=OneWay}" Value="True">
                                        <Setter TargetName="Delimiter" Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <!-- 남은 시간 00:00:00 -->
                                    <DataTrigger Binding="{Binding Path=TBRemainTime, Mode=OneWay}" Value="00:00:00">
                                        <Setter TargetName="RemainTimeTextBlock" Property="Foreground" Value="#ffb400"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- upper guide -->
                    <Border x:Name="RestoreDollUpperGuide" Visibility="Collapsed"
                        Style="{StaticResource GroupGuideStyle}"/>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
